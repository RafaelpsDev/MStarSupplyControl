@model List<MStarSupplyControl.IoC.DTOs.MercadoriaDTO>
@{
    ViewData["Title"] = "Lista de Mercadorias";
}
<div class="styleBotaoNovo" style="margin-bottom:1%">
    <a class="btn btn-block botaoStyle" style="margin-bottom:1%" href="@Url.Action("CadastrarMercadoria", "Mercadoria")" role="button">Novo</a>
    <display-4 class="fontStyle displayCadastro" style="margin-bottom:1%">Utilize o botão acima para adicionar uma nova mercadoria</display-4>
    </div>
    
<div class="text-center">
    <display-3 class="fontStyle displayCadastro">Lista de Mercadorias na base de dados</display-3>
</div>

    <table class="table table-striped table-responsive inputStyle" style="margin-top: 0.50rem" id="table-mercadorias">
        <thead>
            <tr>
                <th scope="col">Mercadoria</th>
                <th scope="col">Tipo</th>
                <th scope="col">Fabricante</th>                
                <th scope="col">Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (MStarSupplyControl.IoC.DTOs.MercadoriaDTO mercadorias in Model)
                {
                <tr class="inputStyle">
                        <td>@mercadorias.Nome</td>
                        <td>@mercadorias.Tipo</td>
                        <td>@mercadorias.Fabricante</td>                        
                        <td>@mercadorias.Quantidade</td>
                    </tr>
                }
            }
        </tbody>
    </table>



